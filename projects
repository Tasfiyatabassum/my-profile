            transition: transform 0.5s ease, opacity 0.5s ease;
            position: absolute;
            opacity: 0;
            transform: translateX(100%);
        }

        .hobby-card.active {
            opacity: 1;
            transform: translateX(0);
        }

        .hobby-card.previous {
            transform: translateX(-100%);
        }

        .carousel-controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1rem;
        }

        .carousel-controls button {
            background: #7e09d7;
            border: none;
            color: #fff;
            font-size: 1.5rem;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .carousel-controls button:hover {
            background: #ff6b8a;
        }
    </style>
    <script>
        let currentHobby = 0;
        const hobbies = document.querySelectorAll('.hobby-card');

        function updateHobby() {
            hobbies.forEach((card, index) => {
                card.classList.remove('active', 'previous');
                if (index === currentHobby) {
                    card.classList.add('active');
                } else if (index === (currentHobby - 1 + hobbies.length) % hobbies.length) {
                    card.classList.add('previous');
                }
            });
        }

        function nextHobby() {
            currentHobby = (currentHobby + 1) % hobbies.length;
            updateHobby();
        }

        function prevHobby() {
            currentHobby = (currentHobby - 1 + hobbies.length) % hobbies.length;
            updateHobby();
        }

        // Initialize
        updateHobby();
    </script>
</section>

